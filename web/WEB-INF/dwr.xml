<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN" "http://getahead.org/dwr/dwr30.dtd">

<dwr>
  <allow>
    <create creator="new" scope="application">
      <param name="class" value="com.example.Network"/>
    </create>
    <convert converter="bean" match="com.example.Tweet"/>
    <convert converter="bean" match="com.example.User">
      <param name="exclude" value="password"/>
    </convert>
  </allow>
</dwr>
